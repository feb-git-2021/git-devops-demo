@model IEnumerable<BookProject.Models.Models.Category>
@{
    ViewData["Title"] = "All Categories";
}

<h1>Index</h1>
@*<p>@ViewBag.MyName</p>
<h3>@ViewData["Data"]</h3>*@

@*@foreach(var v in ViewBag.AllCat)
{
    <p>@v.CategoryName</p>
