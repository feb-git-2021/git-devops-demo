@model BookProject.Models.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
            
        </div>
        
        <div class="mb-3">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" disabled class="form-control" />
          
         

        </div>
         <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            
        </div>
         <div class="mb-3">
            <label asp-for="CreateDateTime"></label>
            <input asp-for="CreateDateTime" disabled type="date" class="form-control" />

        </div>
        <button type="submit" class="btn btn-outline-danger" style="width:150px">Delete</button>
        <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>




